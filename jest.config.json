{
  "bail": true,
  "verbose": true,
  "cache": false,
  "clearMocks": true,
  "collectCoverage": true,
  "mapCoverage": true,
  "coverageDirectory": "<rootDir>/dist/jest/coverage",
  "testRegex": "(.*\\.(spec))\\.(ts|tsx|js)$",
  "testResultsProcessor": "./node_modules/jest-junit-reporter",
  "transform": {
    "^.+\\.(tsx?)$": "<rootDir>/src/test/preprocessor.js"
  },
  "moduleDirectories": [
    "node_modules",
    "<rootDir>/src"
  ],
  "testPathIgnorePatterns": [
    "/dist/"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "text",
    "html"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/__test__/.*\\.(ts|js)$",
    "/dist/.*\\.(ts|js)$"
  ]
}